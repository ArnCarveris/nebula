{
  version: 2,
  engine: "Nebula",
  framescript: {
    render_textures: [
      {
        name: "NormalBuffer",
        format: "R11G11B10F",
        relative: true,
        width: 1.0,
        height: 1.0
      },
      {
        name: "AlbedoBuffer",
        format: "R8G8B8A8",
        relative: true,
        width: 1.0,
        height: 1.0
      },
      {
        name: "SpecularBuffer",
        format: "R8G8B8A8",
        relative: true,
        width: 1.0,
        height: 1.0
      },
      {
        name: "EmissiveBuffer",
        format: "R11G11B10F",
        relative: true,
        width: 1.0,
        height: 1.0
      },
      {
        name: "LightBuffer",
        format: "R11G11B10F",
        relative: true,
        width: 1.0,
        height: 1.0
      },
      {
        name: "ColorBuffer",
        format: "R8G8B8A8",
        relative: true,
        width: 1.0,
        height: 1.0
      },
      {
        name: "ScreenBuffer",
        format: "R11G11B10F",
        relative: true,
        width: 1.0,
        height: 1.0
      },
      {
        name: "BloomBuffer",
        format: "R11G11B10F",
        relative: true,
        width: 0.5,
        height: 0.5
      },
      {
        name: "GodrayBuffer",
        format: "R8G8B8A8",
        relative: true,
        width: 0.5,
        height: 0.5
      },
      {
        name: "ShapeBuffer",
        format: "R8G8B8A8",
        relative: true,
        width: 1.0,
        height: 1.0
      },
      {
        name: "AverageLumBuffer",
        format: "R16F",
        relative: false,
        width: 1.0,
        height: 1.0
      },
      {
        name: "SSSBuffer",
        format: "R16G16B16A16F",
        relative: true,
        width: 1.0,
        height: 1.0
      },
      { name: "__WINDOW__" }
    ],

    read_write_textures: [
      {
        name: "HBAOBuffer",
        format: "R16F",
        relative: true,
        width: 1.0,
        height: 1.0
      },
      {
        name: "BloomBufferBlurred",
        format: "R16G16B16A16F",
        relative: true,
        width: 0.2,
        height: 0.2
      }
    ],

    depth_stencils: [
      {
        name: "ZBuffer",
        format: "D32S8",
        relative: true,
        width: 1.0,
        height: 1.0
      }
    ],

    algorithms: [
      {
        name: "Tonemapping",
        class: "Algorithms::TonemapAlgorithm",
        render_textures: [
          "LightBuffer",
          "AverageLumBuffer"
        ]
      },
      {
        name: "HBAO",
        class: "Algorithms::HBAOAlgorithm",
        depth_stencils: [
          "ZBuffer"
        ],
        read_write_textures: [
          "HBAOBuffer"
        ]
      },
      {
        name: "Bloom",
        class: "Algorithms::BloomAlgorithm",
        render_textures: [
          "LightBuffer",
          "AverageLumBuffer",
          "BloomBuffer"
        ],
        read_write_textures: [
          "BloomBufferBlurred"
        ]
      }
    ],

    compute_algorithm: {
      name: "HBAO-Prepare"
    },

    begin_submission: {
      name: "Beginning of frame graphics submission",
      queue: "Graphics",
      _comment: "Mandatory start of graphics submission, must be met with a matching end_submission"
    }

    begin_submission: {
      name: "Beginning of frame compute submission",
      queue: "Compute",
      _comment: "Mandatory start of compute submission, must be met with a matching end_submission"
    }

    compute_algorithm: {
      name: "LightContext - Update Shadowmaps"
    }

    pass: {
      name: "Deferred Lighting",
      attachments: [
        {
          name: "AlbedoBuffer",
          clear: [ 0.7, 0.7, 0.7, 1 ],
          store: true
        },
        {
          name: "NormalBuffer",
          clear: [ 0, 0, -1, 0 ],
          store: true
        },
        {
          name: "SpecularBuffer",
          clear: [ 0, 0, 0, 0 ],
          store: true
        },
        {
          name: "EmissiveBuffer",
          clear: [ 0, 0, 0, -1 ],
          store: true
        },
        {
          name: "LightBuffer",
          clear: [ 0.05, 0.05, 0.05, 0.1 ],
          store: true
        },
        {
          name: "SSSBuffer",
          clear: [ 0.5, 0.5, 0.5, 1 ],
          store: true
        }
      ],

      depth_stencil: {
        name: "ZBuffer",
        clear: 1,
        clear_stencil: 0,
        store: true
      },

      subpass: {
        name: "GeometryPass",
        dependencies: [],
        attachments: [ "AlbedoBuffer", "NormalBuffer", "SpecularBuffer", "EmissiveBuffer" ],
        depth: true,
        batch: "FlatGeometryLit",
        batch: "TesselatedGeometryLit",
      },
      subpass: {
        name: "LightPass",
        dependencies: [ "GeometryPass" ],
        inputs: [ "AlbedoBuffer", "NormalBuffer", "SpecularBuffer", "EmissiveBuffer", "ZBuffer" ],
        depth: true,
        attachments: [ "LightBuffer" ],
        system: "Lights",
        batch: "Background",
      },
    },

    pass: {
      name: "BloomPass",
      attachments: [
        {
          name: "BloomBuffer",
          store: true
        }
      ],

      subpass: {
        name: "BrightPass",
        depth: false,
        attachments: [ "BloomBuffer" ],
        resources: [
          {
            name: "LightBuffer",
            access: "ShaderRead",
            layout: "ShaderRead",
            stage: "PixelShader",
            aspect: "Color"
          }
        ]
        subpass_algorithm: {
          name: "Bloom-BrightnessLowpass",
        }
      }
    }

    compute_algorithm: {
      name: "HBAO-Run",
      inputs: [
        {
          name: "ZBuffer",
          access: "DepthAttachmentRead",
          layout: "DepthStencilRead",
          stage: "ComputeShader",
          aspect: "Color"
        }
      ],
      outputs: [
        {
          name: "HBAOBuffer",
          access: "ShaderWrite",
          layout: "General",
          stage: "ComputeShader",
          aspect: "Color"
        }
      ]
    },

    compute_algorithm: {
      name: "Bloom-Blur",
      inputs: [
        {
          name: "BloomBuffer",
          access: "ShaderRead",
          layout: "ShaderRead",
          stage: "ComputeShader",
          aspect: "Color"
        }
      ],
      outputs: [
        {
          name: "BloomBufferBlurred",
          access: "ShaderWrite",
          layout: "General",
          stage: "ComputeShader",
          aspect: "Color"
        }
      ]
    }

    pass: {
      name: "Luminance"
      attachments: [
        {
          name: "AverageLumBuffer",
          load: true,
          store: true
        },
      ],

      subpass: {
        name: "Tonemapping",
        dependencies: [],
        depth: false,
        attachments: [ "AverageLumBuffer" ],

        subpass_algorithm: {
          name: "Tonemap-AverageLum"
        }
      }
    }

    pass: {
      name: "PostEffects",
      attachments: [
        {
          name: "ScreenBuffer",
          clear: [ 0.1, 1.0, 0.1, 1 ],
          store: true
        }
      ],

      depth_stencil: {
        name: "ZBuffer",
        store: true,
        load: true
      },

      subpass: {
        name: "ScreenPass",
        dependencies: [],
        attachments: [ "ScreenBuffer" ],
        depth: false,

        resources: [
          {
            name: "HBAOBuffer",
            access: "ShaderRead",
            layout: "ShaderRead",
            stage: "PixelShader",
            aspect: "Color"
          },
          {
            name: "BloomBufferBlurred",
            access: "ShaderRead",
            layout: "ShaderRead",
            stage: "PixelShader",
            aspect: "Color"
          }
        ],

        fullscreen_effect: {
          name: "GatherPostEffect",
          shader_state: {
            shader: "gather",
            variables: [
              {
                semantic: "LightTexture",
                value: "LightBuffer"
              },
              {
                semantic: "BloomTexture",
                value: "BloomBufferBlurred"
              },
              {
                semantic: "DepthTexture",
                value: "ZBuffer"
              },
              {
                semantic: "EmissiveTexture",
                value: "EmissiveBuffer"
              },
              {
                semantic: "SSSTexture",
                value: "SSSBuffer"
              },
              {
                semantic: "LuminanceTexture",
                value: "AverageLumBuffer"
              },
              {
                semantic: "SSAOTexture",
                value: "HBAOBuffer"
              }
            ]
          },
          size_from_texture: "ScreenBuffer"
        },
      },

      subpass: {
        name: "UI",
        dependencies: [ "ScreenPass" ],
        depth: true,
        attachments: [ "ScreenBuffer" ],

        batch: "DirectToColor",
        plugins: {
          name: "ImGui",
          filter: "IMGUI"
        }
      }
    },

    compute_algorithm: {
      name: "Tonemap-Downsample",
      inputs: [
        {
          name: "LightBuffer",
          access: "TransferRead",
          layout: "TransferSource",
          stage: "Transfer",
          aspect: "Color"
        }
      ]
    },

    compute_algorithm: {
      name: "Tonemap-Copy",
      inputs: [
        {
          name: "AverageLumBuffer",
          access: "TransferRead",
          layout: "TransferSource",
          stage: "Transfer",
          aspect: "Color"
        }
      ]
    }

    blit: {
      name: "CopyToWindow",
      inputs: [
        {
          name: "ScreenBuffer",
          access: "TransferRead",
          layout: "TransferSource",
          stage: "Transfer",
          aspect: "Color"
        }
      ],
      outputs: [
        {
          name: "__WINDOW__",
          access: "TransferWrite",
          layout: "TransferDestination",
          stage: "Transfer",
          aspect: "Color"
        }
      ],
      from: "ScreenBuffer",
      to: "__WINDOW__"
    },
    barrier: {
      name: "TransitionToPresent",
      inputs: [
        {
          name: "__WINDOW__",
          access: "TransferRead",
          layout: "Present",
          stage: "Transfer",
          aspect: "Color"
        }
      ]
    }

    end_submission: {
      name: "End of frame compute submission",
      queue: "Compute",
      _comment: "Mandatory end of compute submission, must be met with a matching begin_submission"
    }

    end_submission: {
      name: "End of frame graphics submission",
      queue: "Graphics",
      _comment: "Mandatory end of graphics submission, must be met with a matching begin_submission"
    }
  }
}